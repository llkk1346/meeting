<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <!-- 위 3개의 메타 태그는 *반드시* head 태그의 처음에 와야합니다; 어떤 다른 콘텐츠들은 반드시 이 태그들 *다음에* 와야 합니다 -->
    <title><%= title%></title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <!-- 합쳐지고 최소화된 최신 CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

    <!-- 부가적인 테마 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">

    <!-- 합쳐지고 최소화된 최신 자바스크립트 -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <!-- fullcalender -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/main.min.css' rel='stylesheet' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/main.min.js'></script>
    <!-- fullcalendar 언어 CDN -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/locales-all.min.js'></script>



    <style>
        /* body 스타일 */
        html, body {
            overflow: hidden;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }
        /* 캘린더 위의 해더 스타일(날짜가 있는 부분) */
        .fc-header-toolbar {
            padding-top: 1em;
            padding-left: 1em;
            padding-right: 1em;
        }
    </style>
</head>

<body>
    <% if(findUserId === undefined){%>
        <div class="container theme-showcase" role="main">
            <div><h3> 손님 </h3></div>
            <div id="calendar-container">
                <div id="calendar"></div>
            </div>
        
        </div> <!-- /container -->
    <%}%>
    <% if(findUserId !=undefined){%>
        <div class="container theme-showcase" role="main">
            <div><h3> <%= findUserId%> 님</h3></div>
            <div id="calendar-container">
                <div id="calendar"></div>
            </div>
        
        </div> <!-- /container -->
    <%}%>   


<!-- Button trigger modal -->
<div id=myModalDiv>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" id="myModals">
</button>
</div>
  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">회의실 예약</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
        <form id='meetingForm'>
            <div class="row">
                <div class="col-sm-12">
                    <label class="meetingRoom"></label>
                    <select class="form-control" id="meetingRoom" name="meetingRoom">
                        <option value="0">회의실 목록</option>
                        <%
                            for(let i=0; i<meetingRoom.length; i++){
                                let room = meetingRoom[i]; 
                        %>
                        <option value= <%=room.id%>><%=room.room_name%> (최대인원수 : <%=room.count%>)</option>
                        <%}%>
                    </select>
                </div>
            </div>    
            <div class="row">
                <div class="col-sm-12">
                    <label class="meetingTitle"></label>
                    <input type="text" class="form-control" id="meetingTitle" name="meetingTitle" placeholder="회의제목"> 
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-6">
                    <input type="date" class="form-control" id="meetingDateStartYMD" name="meetingDateStartYMD"> 
                </div>
                
                <div class="col-sm-3">
                    <select class="form-control" id="meetingStartTimeY" name="meetingStartTimeY">
                        <%
                            for(let i=8; i<20; i++){
                        %>
                        <option value= <%=i%>><%=i%>시 </option>
                        <%}%>
                    </select> 
                </div>
                <div class="col-sm-3">
                    <select class="form-control" id="meetingStartTimeM" name="meetingStartTimeM">
                        <%
                            for(let i=0; i<61; i+=10){
                        %>
                        <option value= <%=i%>><%=i%>분 </option>
                        <%}%>
                    </select>
                    
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-6">
                    <input type="date" class="form-control" id="meetingDateEndYMD" name="meetingDateEndYMD">
                </div>
                <div class="col-sm-3">
                    <select class="form-control" id="meetingEndTimeY" name="meetingEndTimeY">
                        <%
                            for(let i=8; i<20; i++){
                        %>
                        <option value= <%=i%>><%=i%>시 </option>
                        <%}%>
                    </select> 
                </div>
                <div class="col-sm-3">
                    <select class="form-control" id="meetingEndTimeM" name="meetingEndTimeM">
                        <%
                            for(let i=0; i<61; i+=10){
                        %>
                        <option value= <%=i%>><%=i%>분 </option>
                        <%}%>
                    </select>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label class="meetingContent"></label>
                    <textarea id="meetingContent" name="meetingContent" class="form-control"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label></label>
                    <select class="form-control" id="peoples" name="peoples">
                        <option value="0">인원</option>
                        <%
                            for(let i=1; i<21; i++){
                        %>
                        <option value=<%=i%>><%=i%>명</option>
                        <%}%>
                    </select>
                </div>
            </div>
            <input type="hidden" id="userName" name="userName" value=<%=findUserUID%>>
        </form>    
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">취소</button>
          <button type="button" class="btn btn-primary" onclick="saveMeeting()">예약</button>
        </div>
      </div>
    </div>
  </div>
</body>

<script>
// 인원수
var count;


    (function(){
        $(function(){
                // calendar element 취득
                var calendarEl = $('#calendar')[0];
                // full-calendar 생성하기
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    height: '700px', // calendar 높이 설정
                    expandRows: true, // 화면에 맞게 높이 재설정
                    slotMinTime: '08:00', // Day 캘린더에서 시작 시간
                    slotMaxTime: '20:00', // Day 캘린더에서 종료 시간
                    // 해더에 표시할 툴바
                    // title : 현재날짜 (월/주/일) / prev: 달력을 (월/주/일) 전으로 이동 / next: 달력을 (월/주/일) 후로 이동
                    // / prevYear: 달력을 1년 전으로 이동 / nextYear : 달력을 1년 후로 이동 / today: 현재날짜 / a view name: 사용가능한 캘린더로 전환(캘린더 view 이름)
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                    },
                    initialView: 'dayGridMonth', // 초기 로드 될때 보이는 캘린더 화면(기본 설정: 달)
                    //initialDate: '2021-07-15', // 초기 날짜 설정 (설정하지 않으면 오늘 날짜가 보인다.)
                    navLinks: true, // 날짜를 선택하면 Day 캘린더나 Week 캘린더로 링크
                    editable: true, // 수정 가능?
                    selectable: true, // 달력 일자 드래그 설정가능
                    nowIndicator: true, // 현재 시간 마크
                    dayMaxEvents: true, // 이벤트가 오버되면 높이 제한 (+ 몇 개식으로 표현)
                    locale: 'ko', // 한국어 설정
                    eventAdd: function(obj) { // 이벤트가 추가되면 발생하는 이벤트
                        console.log(obj);
                    },
                    eventChange: function(obj) { // 이벤트가 수정되면 발생하는 이벤트
                        console.log(obj);
                    },
                    eventRemove: function(obj){ // 이벤트가 삭제되면 발생하는 이벤트
                        console.log(obj);
                    },
                    select: function(arg) { // 캘린더에서 드래그로 이벤트를 생성할 수 있다.
                        let meetingStart = document.getElementById("meetingDateStartYMD");
                        let meetingEnd = document.getElementById("meetingDateEndYMD");

                        meetingStart.value = arg.start.toISOString().slice(0,10);
                        //meetingEnd.value = arg.end.toISOString().slice(0,10);
                        meetingEnd.value = arg.end.toISOString().slice(0,10);
                        
                        
                        
                        document.getElementById('myModals').click();

                        
                        // calendar.addEvent({
                        //     title: document.getElementById('meetingTitle').value,
                        //     start: document.getElementById('meetingDateStartYMD').value,
                        //     end: document.getElementById('meetingDateEndYMD').value,
                        //     //allDay: arg.allDay
                        // })
                        
                        // calendar.unselect()
                        
                    },
                    // 이벤트
                    // title: '' -> String 이벤트에 표시될 제목
                    // start: '' -> ex) '2022-01-04' Date object, 이벤트 시작 날짜(& 시간)
                    //              ex) '2022-01-04T16:00:00'
                    // end: '' -> ex) '2022-01-04' Date object, 이벤트 종료 날짜(& 시간)
                    events: function(info, succcessCallback, failureCallback){
                        $.ajax({
                            type: "GET",
                            url: "/event/search",
                            dataType: "json",
                            success: function(data){
                                console.log(data);
                                let list = data;
                                let events = list.map(function(item){
                                    return{
                                        groupId: item.user_name,
                                        title: item.title,
                                        start: item.start_date.slice(0,19),
                                        end: item.end_date.slice(0,19)
                                    }
                                })
                                succcessCallback(events);
                            },
                            error: function(error){
                                console.log(error);
                            }
                        });
                    }
            });
            // 캘린더 랜더링
            calendar.render();
        });
    })();

function saveMeeting(){

    let formData = $("#meetingForm").serialize();

    //1. DB에 입력 데이터 저장
    $.ajax({
            type: "POST",        
            url: "/event/events",
            data: formData,
            success: function(result){
                console.log(result);
               if(result.code==400){
                   alert(result.msg);
                   return ;
               } else if(result.code==200){
                    alert(result.msg);
                    window.location.href="http://localhost:3000/event/events";
               }
            },
            error: function(err){
                console.log(err);
            }
        });
    // calendar.addEvent({
    //     title: meetingTitle.value,
    //     start: meetingStart.value,
    //     end: meetingEnd.value,
    //     //allDay: arg.allDay
    //                 })
}


$(document).ready(function(){
    $("#meetingStartTimeY option:eq(0)").prop("selected", true);
    $("#meetingStartTimeM option:eq(0)").prop("selected", true);
    $("#meetingEndTimeY option:eq(0)").prop("selected", true);
    $("#meetingEndTimeM option:eq(0)").prop("selected", true);
    $("#myModalDiv").hide();
    
})

</script>
</html>